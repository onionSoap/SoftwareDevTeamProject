<div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 100%;">
    <div class="scoreboard-container" style="text-align: center; width: 80%; max-width: 800px; margin: 0 auto; background-color: rgba(0, 0, 0, 0.6); padding: 40px; border-radius: 8px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);">
        <h1 class="scoreboard-title" style="font-size: 2.5em; color: #FFF5F5;">Top Players</h1>
        <table class="scoreboard-table" style="width: 100%; border-collapse: collapse; font-size: 1.2em; margin-top: 20px; text-align: center;">
            <thead>
                <tr>
                    <th style="background-color: #006400; color: #FFF5F5; padding: 15px; border: 1px solid #ddd;">Username</th>
                    <th style="background-color: #006400; color: #FFF5F5; padding: 15px; border: 1px solid #ddd;">Time</th>
                </tr>
            </thead>
            <tbody>
                {{#each scoreboard_data}}
                <tr style="color: #FFF5F5;">
                    <td style="padding: 15px; border: 1px solid #ddd;">{{this.username}}</td>
                    <td style="padding: 15px; border: 1px solid #ddd;">{{this.timer}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>