<div class="inventory">
    <style>
        .inventory {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .inventory-row {
            display: flex;
            gap: 5px;
        }

        .item {
            width: 50px;
            height: 50px;
            border: 2px solid black;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: white;
        }

        .item img {
            width: 80%;
            height: 80%;
        }

        .item.unknown {
            background-color: white;
        }

        .item.found {
            border: 2px solid black;
        }

        .item.active {
            border: 2px solid green; 
            background-color: #e6fff2;
        }

        .item.disabled {
            background-color: grey;
            opacity: 0.5; 
        }
    </style>

    <div class="inventory-row">
        <div class="item active">
            <img src="/path/to/active_icon.png" alt="Active Item">
        </div>
        <div class="item found">
            <img src="/path/to/found_icon.png" alt="Found Item">
        </div>
        <div class="item disabled">
            <img src="/path/to/disabled_icon.png" alt="Disabled Item">
        </div>

        {{#range 1 8}}
            <div class="item unknown"></div>
        {{/range}}
    </div>
    <div class="inventory-row">
    <div class="item">
        <img src="/resources/plain_svg/carrot.svg" alt="Carrot">
    </div>
    <div class="item">
        <img src="/resources/plain_svg/key.svg" alt="Key">
    </div>
    <div class="item">
        <img src="/resources/plain_svg/cookie_cutter.svg" alt="Cookie Cutter">
    </div>
    <div class="item">
        <img src="/resources/plain_svg/uncooked_gingerbread.svg" alt="Uncooked Gingerbread Men">
    </div>
    <div class="item">
        <img src="/resources/plain_svg/cooked_gingerbread.svg" alt="Cooked Gingerbread Men">
    </div>
    </div>
</div>
